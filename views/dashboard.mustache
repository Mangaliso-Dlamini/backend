<!DOCTYPE html>
<html lang="en">

<head>
    {{>header}}
</head>

<body>
    <div class="container-xxl position-relative bg-white d-flex p-0">
        <!-- Spinner Start -->
        {{>spinner}}
        <!-- Spinner End -->


        <!-- Sidebar Start -->
        {{>sidebar}}
        <!-- Sidebar End -->


        <!-- Content Start -->
        <div class="content">
            <!-- Navbar Start -->
            {{>navbar}}
            <!-- Navbar End -->

            <!-- Match Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-sm-12 col-xl-6">
                        <div class="h-100 bg-light text-center rounded p-4">
                            <div class="d-flex align-items-center justify-content-between mb-4">
                                <h6 class="mb-0">Latest Match</h6>
                            </div>
                            {{#lastestMatch}}
                            <div class="scoreline">
                                <h4>{{homeTeam.name}} {{result}} {{awayTeam.name}}</h4>
                                <p>Match Date: {{dateOnly}} Time: {{timeOnly}}</p>
                                <p>Location: {{venue}} Status: {{status}}</p>
                            </div>
                            {{/lastestMatch}}
                            {{^lastestMatch}}
                                <div>
                                    <h2>No Latest Match Available</h2>
                                </div>
                            {{/lastestMatch}}
                        </div>
                    </div>
                    <div class="col-sm-12 col-xl-6">
                        <div class="h-100 bg-light text-center rounded p-4">
                            <div class="d-flex align-items-center justify-content-between mb-4">
                                <h6 class="mb-0">Next Match</h6>
                            </div>
                            {{#nextMatch}}
                            <div class="next-match-details">
                                <h4>{{homeTeam.name}} vs {{awayTeam.name}}</h4>
                                <p>Date: {{dateOnly}} Time: {{timeOnly}}</p>
                                <p>Location: {{venue}}</p>
                            </div>
                            {{/nextMatch}}
                            {{^nextMatch}}
                                <div>
                                    <h2>No Upcoming Match Available</h2>
                                </div>
                            {{/nextMatch}}
                        </div>
                    </div>                    
                </div>
            </div>
