<!DOCTYPE html>
<html lang="en">
<head>
    {{>header}}
</head>

<body>
    <div class="container-xxl position-relative bg-white d-flex p-0">
        <!-- Spinner Start -->
        {{>spinner}}
        <!-- Spinner End -->


        <!-- Sidebar Start -->
        {{>sidebar}}
        <!-- Sidebar End -->


        <!-- Content Start -->
        <div class="content">
            <!-- Navbar Start -->
            {{>navbar}}
            <!-- Navbar End -->

            


            <div class="d-flex justify-content-end m-n2 pt-4 px-4">
                <button type="button" class="btn btn-primary m-2" data-bs-toggle="modal" data-bs-target="#create-team">Create New Team</button>
            </div>

            <!-- The Modal -->
            <div class="modal" id="create-team">
                <div class="modal-dialog">
                    <div class="modal-content">

                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h4 class="modal-title">Register Team</h4>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                        <div class="col-sm-12 col-xl-6">
                            <div class="bg-light rounded h-100 p-4">
                                <h6 class="mb-4">Register Football Team</h6>
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingTeamName" placeholder="Team Name">
                                    <label for="floatingTeamName">Team Name</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingCoachName" placeholder="Coach Name">
                                    <label for="floatingCoachName">Coach Name</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingHomeStadium" placeholder="Home Stadium">
                                    <label for="floatingHomeStadium">Home Stadium</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingLocation" placeholder="Location">
                                    <label for="floatingLocation">Location</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="date" class="form-control" id="floatingEstablished" placeholder="Established Date">
                                    <label for="floatingEstablished">Established Date</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="number" class="form-control" id="floatingNumberOfPlayers" placeholder="Number of Players">
                                    <label for="floatingNumberOfPlayers">Number of Players</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <select class="form-select" id="floatingLeague" aria-label="Floating label select example">
                                        <option selected>Open this select menu</option>
                                        <option value="Premier League">Premier League</option>
                                        <option value="La Liga">La Liga</option>
                                        <option value="Serie A">Serie A</option>
                                        <option value="Bundesliga">Bundesliga</option>
                                        <option value="Ligue 1">Ligue 1</option>
                                    </select>
                                    <label for="floatingLeague">League</label>
                                </div>
                                <div class="form-floating">
                                    <textarea class="form-control" placeholder="Leave a comment here" id="floatingTeamComments" style="height: 150px;"></textarea>
                                    <label for="floatingTeamComments">Comments</label>
                                </div>
                            </div>
                        </div>                    
                    </div>

                    <!-- Modal footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                    </div>

                    </div>
                </div>
            </div>



            <!-- Standings Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="bg-light text-center rounded p-4">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <h6 class="mb-0">Teams</h6>
                    </div>
                    {{#teams.length}}
                    <div class="table-responsive">
                        <table class="table text-start align-middle table-bordered table-hover mb-0">
                            <thead>
                                <tr class="text-dark">
                                    <th scope="col">No.</th>
                                    <th scope="col">Team</th>
                                    <th scope="col">Location</th>
                                    <th scope="col">Home Ground</th>
                                    <th scope="col">Number of Players</th>
                                    <th scope="col">League</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#teams}}
                                <tr>
                                    <td>{{index}}</td>
                                    <td>{{name}}</td>
                                    <td>{{location}}</td>
                                    <td>{{stadium}}</td>
                                    <td>{{playerCount}}</td>
                                    <td>Nsingweni Promotion League</td>
                                    <td>
                                        <!-- Edit Button -->
                                        <button type="button" class="btn btn-square btn-primary m-2">
                                            <i class="fa fa-edit"></i>
                                        </button>
                                        
                                        <!-- Delete Button -->
                                        <button type="button" class="btn btn-square btn-danger m-2">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                                {{/teams}}
                            </tbody>
                        </table>
                    </div>
                    {{/teams.length}}
                    {{^teams.length}}
                    <h6 class="mb-0">No Teams yet</h6>
                    {{/teams.length}}
                </div>
            </div>
            
