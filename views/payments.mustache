<!DOCTYPE html>
<html lang="en">

<head>
    {{>header}}
</head>

<body>
    <div class="container-xxl position-relative bg-white d-flex p-0">
        <!-- Spinner Start -->
        {{>spinner}}
        <!-- Spinner End -->


        <!-- Sidebar Start -->
        {{>sidebar}}
        <!-- Sidebar End -->


        <!-- Content Start -->
        <div class="content">
            <!-- Navbar Start -->
            {{>navbar}}
            <!-- Navbar End -->

            <!-- Blank Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="row vh-100 bg-light rounded align-items-center justify-content-center mx-0">
                    <div class="col-md-6 text-center">
                        {{#payments.length}}
                        <div class="table-responsive">
                            <table class="table text-start align-middle table-bordered table-hover mb-0">
                                <thead>
                                    <tr class="text-dark">
                                        <th scope="col">No</th>
                                        <th style="display: none;" scope="col">_id</th>
                                        <th scope="col">Description</th>
                                        <th scope="col">Amount</th>
                                        <th scope="col">Currency</th>
                                        <th scope="col">Date Created</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#payments}}
                                    <tr">
                                        <td>{{index}}</td>
                                        <td style="display: none;" id="_id">{{_id}}</td>
                                        <td>{{description}}</td>
                                        <td>{{amount}}</td>
                                        <td>{{currency}}</td>
                                        <td>{{created_at}}</td>
                                    </tr>
                                    {{/payments}}
                                </tbody>
                            </table>
                        </div>
                        {{/payments.length}}
                        {{^payments.length}}
                            <p>No payments available.</p>
                        {{/payments.length}}


                    
                        <div id="paypal-button-container"></div>
                        <p id="result-message"></p>
                        <!-- Replace the "test" client-id value with your client-id -->
                        <script src="https://www.paypal.com/sdk/js?client-id=ARnRGPOvNwa-UbZuZWOM1lSnmQBPwUSnpVDkElZyMeM6jUjjf8-h1GBznFMaCllmIT5c-cPMxS5QVYfi&components=buttons&enable-funding=venmo,paylater" data-sdk-integration-source="integrationbuilder_sc"></script>
                        <script src="js/payment.js"></script>
                    </div>
                </div>
            </div>
            <!-- Blank End -->


            <!-- Footer Start -->
            {{>footer}}
            <!-- Footer End -->
        </div>
        <!-- Content End -->


        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    {{>scripts}}
    </body>

</html>